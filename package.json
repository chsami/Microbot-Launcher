{
  "name": "microbot-launcher",
  "version": "2.0.0",
  "description": "Launcher for the microbot client",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env DEBUG=true electron .",
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "electron-builder --publish always",
    "linux": "electron-builder --linux"
  },
  "author": "Mocrosoft",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "applicationinsights": "^2.9.6",
    "axios": "^1.7.2",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.1.8",
    "update-electron-app": "^3.0.0"
  },
  "build": {
    "asar": "true",
    "appId": "com.microbot.launcher",
    "productName": "Microbot Launcher",
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "package.json",
      "!**/*.map",
      "images/**",
      "libs/dir-module.js"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "images/microbot_transparent.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Microbot Launcher"
    },
    "publish": {
      "provider": "generic",
      "url": "https://files.microbot.cloud/releases/microbot-launcher/"
    },
    "extraMetadata": {
      "version": "2.0.0"
    }
  }
}
